{
  "name": "batman-tas-theme",
  "displayName": "Batman TAS Theme",
  "description": "A professional VS Code color theme inspired by Batman: The Animated Series (1990s). Features authentic Dark Deco color palette extracted from the legendary animated series, with Gotham midnight backgrounds, classic animation contrast, and Batman TAS-inspired navy blues, purples, and villain accents.",
  "version": "2.0.0",
  "publisher": "batman-tas",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "dark",
    "batman",
    "animated series",
    "tas",
    "1990s",
    "dark deco",
    "gotham",
    "bruce timm",
    "art deco",
    "classic animation",
    "noir",
    "batman tas",
    "timeless",
    "material design",
    "color blind friendly",
    "accessible",
    "professional",
    "theme"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Batman TAS Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/batman-tas-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "vsce package --no-git-tag-version",
    "prerelease": "npm run build",
    "publish": "vsce publish --no-git-tag-version",
    "validate": "node -e \"JSON.parse(require('fs').readFileSync('themes/batman-tas-color-theme.json', 'utf8'))\""
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/batman-tas/batman-tas-theme"
  },
  "bugs": {
    "url": "https://github.com/batman-tas/batman-tas-theme/issues"
  },
  "homepage": "https://github.com/batman-tas/batman-tas-theme#readme",
  "license": "MIT"
}